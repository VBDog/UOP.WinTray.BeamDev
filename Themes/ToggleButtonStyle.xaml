                        <Border x:Name="on" Width="60" Height="20" Background="LightGray" CornerRadius="2,0,0,4" Margin="0,0,0,0">
                            <TextBlock x:Name="onText" Text="ENGLISH" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border x:Name="off" Width="60" Height="20" Background="LightGray" CornerRadius="0,2,4,0">
