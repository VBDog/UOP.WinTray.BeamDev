<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:winTrayUI="clr-namespace:UOP.WinTray.UI"
                    xmlns:converters="clr-namespace:UOP.WinTray.UI.Converters"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:CC="clr-namespace:UOP.WinTray.UI.CustomControls"
    xmlns:views="clr-namespace:UOP.WinTray.UI.Views">
    
    <converters:UniversalValueConverter x:Key="UniversalValueConverter"/>
    <Style x:Key="FontProperties" >
        <Setter Property="Control.FontSize" Value="8.25pt" />
        <Setter Property="Control.FontWeight" Value="Black" />
        <Setter Property="Control.FontFamily" Value="Tahoma" />
    </Style>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource FontProperties}">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Control.FontWeight" Value="Normal"/>
                <Setter Property="Control.Foreground" Value="Gray"/>
            </Trigger>
        </Style.Triggers>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Name="ButtonBorder" CornerRadius="2" BorderThickness="1">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Color="#C9C7BA" />
                                    <GradientStop Color="#D3D3D3" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#F0F0EA"  Offset="0"/>
                                <GradientStop Color="#FEFEFE" Offset="0.1"/>
                                <GradientStop Color="#FDFDFC" Offset="0.2"/>
                                <GradientStop Color="#FCFCFB" Offset="0.3"/>
                                <GradientStop Color="#FAFAF9" Offset="0.4"/>
                                <GradientStop Color="#F8F8F5" Offset="0.5"/>
                                <GradientStop Color="#F3F3EE" Offset="0.6"/>
                                <GradientStop Color="#F1F1EB" Offset="0.7"/>
                                <GradientStop Color="#ECEBE6" Offset="0.8"/>
                                <GradientStop Color="#E2DFD6" Offset="0.9"/>
                                <GradientStop Color="#D6D0C5" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid Name="ButtonGrid" Background="Transparent">
                            <Border Name="HoverRectangle" CornerRadius="1" BorderThickness="0">
                                <ContentPresenter Name="Content" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="ButtonBase.IsEnabled" Value="False">
                            <Setter Property="Background" TargetName="ButtonBorder" Value="#F5F4EA"/>
                            <Setter Property="BorderBrush" TargetName="HoverRectangle" Value="#C9C7BA"/>
                            <Setter Property="BorderThickness" TargetName="HoverRectangle" Value="1"/>
                        </Trigger>
                        <Trigger Property="ButtonBase.IsEnabled" Value="True">
                            <Setter Property="BorderBrush" TargetName="HoverRectangle" Value="#003C74"/>
                            <Setter Property="BorderThickness" TargetName="HoverRectangle" Value="1"/>
                        </Trigger>
                        <Trigger Property="ButtonBase.IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" TargetName="HoverRectangle" Value="#FDBD57"/>
                            <Setter Property="BorderThickness" TargetName="HoverRectangle" Value="1,1,1,1"/>
                            <Setter Property="BorderBrush" TargetName="ButtonBorder" Value="#003C74"/>
                            <Setter Property="BorderThickness" TargetName="ButtonBorder" Value="1"/>
                            <Setter Property="Margin" TargetName="ButtonBorder" Value="0"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="ButtonBorder" Value="#E3E3DB"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderThickness" TargetName="HoverRectangle" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type Button}" x:Key="WrapButton"  BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Margin" Value="1 0 1 0"></Setter>

        <Setter Property="MinHeight" Value="25"></Setter>

        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        <Setter Property="Background" Value="AliceBlue"></Setter>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock TextAlignment="Center" Text="{TemplateBinding Content}" TextWrapping="Wrap" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Margin" Value="1,1,5,1"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Background" Value="#FFD500"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="NumericTextBox" TargetType="TextBox">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="80"/>
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Margin" Value="1,1,5,1"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Background" Value="#FFD500"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>
    <Style x:Key="LabelStyle1" TargetType="Label">
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Margin" Value="1 1 1 1"/>

        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Height" Value="24"/>
    </Style>

    <Style x:Key="GridHeader" TargetType="TextBlock">
          <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
   
    </Style>

   
    <DataTemplate x:Key="Label">
        <Border Background="#99ccff" BorderBrush="Gray" BorderThickness="1">
            <Label Style="{StaticResource LabelStyle1}"  Content="{Binding Path=Tag,RelativeSource={RelativeSource AncestorType=ContentControl}}"/>
        </Border>
    </DataTemplate>
    <DataTemplate x:Key="LabelWithGreenBackGrnd">
        <Border Background="#33B7FF" BorderBrush="Gray" BorderThickness="1">
            <Label Style="{StaticResource LabelStyle1}"  Content="{Binding Path=Tag,RelativeSource={RelativeSource AncestorType=ContentControl}}"/>
        </Border>
    </DataTemplate>
    <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="Margin" Value="1,1,5,1"/>
        <Setter Property="MinWidth" Value="80"/>
        
    </Style>
    <Style TargetType="ComboBoxItem">
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

