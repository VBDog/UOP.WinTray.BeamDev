    <!-- Global Group Box STyle-->
    <Style x:Key="GlobalGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="BorderBrush" Value="Gray"/>

        <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
    </Style>
    <!--Global Boder Style-->
    <Style x:Key="GlobalBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="MinHeight" Value="35" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="Gray" />
        <Setter Property="Margin" Value="4,1,4,1" />
    </Style>

    <!--Global Numeric text Box Style-->
    <Style x:Key="GlobalErrorMessageStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="Red"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="4"/>

    </Style>

    <!-- Global Property Input stack style-->
    <Style x:Key="GlobalPropertyStackStyle" TargetType="{x:Type StackPanel}">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Margin" Value="1,10,0,0" />
    </Style>

   <Style TargetType="views:UOPPropertyListView" x:Key="GlobalPropertyListStyle">

            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="MinWidth" Value="175" />
            <Setter Property="MinHeight" Value="175" />
        <Setter Property="ToolTip" Value="Double Click To Edit Property Values"/>

        </Style>
    <!--Global Numeric text Box Style-->
    <Style x:Key="GlobalNumericInputStyle" TargetType="TextBox">
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="1,1,5,1"/>
        <Setter Property="Width" Value="45"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="MinWidth" Value="65"/>
        <!--<Setter Property="ValidatesOnDataErrors" Value="True"/>-->
        <!--<Setter Property="UpdateSourceTrigger" Value="LostFocus"/>-->
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Background" Value="#FFD500"/>
            </Trigger>
        </Style.Triggers>
        
    </Style>
    <!--Global Units label style-->
    <Style x:Key="GlobalUnitsLabel" TargetType="{x:Type Label}" >
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property ="Width" Value="Auto" />
        <Setter Property ="HorizontalAlignment" Value="Left" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="MinWidth" Value="25" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Visibility" Value="Visible" />
    </Style>
    <!--Wrap Button style-->
    <Style x:Key="GlobalButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Margin" Value="0 6 0 6"></Setter>
        <Setter Property="Height" Value="20"></Setter>
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="MinWidth" Value="70"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        <Setter Property="Background" Value="AliceBlue"></Setter>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock TextAlignment="Center" Text="{TemplateBinding Content}" TextWrapping="Wrap" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Global  caption text style-->
    <Style x:Key="GlobalUnitsCaption" TargetType="{x:Type TextBlock}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="Medium"></Setter>
    </Style>

    <!--Popup Window Style-->
    <Style TargetType="Window" x:Key="PopUpWindowTheme">
        <Setter Property="Background" Value="White"/>
        <Setter Property="WindowStyle" Value="ToolWindow"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="TextBlockstyle">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="MinWidth" Value="50"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <DataTemplate x:Key="KeyValuePairTemplate">
        <StackPanel>
            <TextBlock Text="{Binding Path=DisplayName}" />
            <TextBlock Text="{Binding Path=DisplayValueStringFormatted}"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="Header">
        <TextBlock FontWeight="Bold" Text="{Binding}"/>
    </DataTemplate>

    <DataTemplate x:Key="DisplayName">
        <TextBlock Text="{Binding DisplayName}" Foreground="{Binding DisplayColor,Converter={StaticResource UniversalValueConverter}}"/>
    </DataTemplate>

    <DataTemplate x:Key="Value">
        <TextBlock Text="{Binding Value}" Foreground="{Binding DisplayColor,Converter={StaticResource UniversalValueConverter}}"/>
    </DataTemplate>
    <DataTemplate x:Key="Source">
        <TextBlock Text="{Binding Source}" Foreground="{Binding ForegroundColor, Converter={StaticResource UniversalValueConverter}}"/>
    </DataTemplate>


    <DataTemplate x:Key="Data">
        <Border  BorderBrush="Gray" BorderThickness="1">
            <TextBlock Text="{Binding Path=Tag,RelativeSource={RelativeSource AncestorType=ContentControl}}" TextAlignment="Center"/>
        </Border>
    </DataTemplate>
   
</ResourceDictionary>