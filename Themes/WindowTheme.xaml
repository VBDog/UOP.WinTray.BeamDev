<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="Window" x:Key="winTrayFormStyle">
        <Setter Property="Background" Value="AliceBlue"></Setter>
        <!--Setting up icon for all the Windows Forms-->
        <Setter Property="Icon" Value="/UOP.WinTray.UI;component/Utilities/Images/MDXFIcon.ico"></Setter>
    </Style>

    <Style TargetType="Window" x:Key="winTrayMainStyle" BasedOn="{StaticResource winTrayFormStyle}">
        <!--Styles for Main Form will be added here-->
    </Style>

</ResourceDictionary>