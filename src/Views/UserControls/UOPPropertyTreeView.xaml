<UserControl x:Class="UOP.WinTray.UI.Views.UOPPropertyTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UOP.WinTray.UI.Views"
              xmlns:viewmodels="clr-namespace:UOP.WinTray.UI.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:UOPPropertyTreeViewModel}"
             mc:Ignorable="d" 
             Name ="propertyTree"
             d:DesignHeight="450" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="nodeTextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Tag" Value="{Binding Path}"/>
            <Style.Triggers >

                <DataTrigger Binding="{Binding Colour}" Value="Gray">
                    <Setter Property="Foreground" Value="Gray"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding Colour}" Value="Black">
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Colour}" Value="Blue">
                    <Setter Property="Foreground" Value="Blue"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Colour}" Value="Red">
                    <Setter Property="Foreground" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>


        <Style TargetType="Button" x:Key="btnTreeNode">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Content" Value="{Binding NodeName}"/>
            <Setter Property="ToolTip" Value="{Binding ToolTip}"/>
            <Setter Property="Tag" Value="{Binding Path}"/>
            <Setter Property="FontWeight" Value="{Binding FontWeight}"/>
            <Setter Property= "Foreground" Value="{Binding Colour}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
                <DataTrigger Binding="{Binding Colour}" Value="Gray">
                    <Setter Property="Foreground" Value="Gray"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding Colour}" Value="Black">
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Colour}" Value="Blue">
                    <Setter Property="Foreground" Value="Blue"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Colour}" Value="Red">
                    <Setter Property="Foreground" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <HierarchicalDataTemplate x:Key="level7">
            <TextBlock  Style="{StaticResource nodeTextBlock}" >
             <Button Style="{StaticResource btnTreeNode}" MouseDoubleClick="TreeNodeButton_MouseDoubleClick" GotFocus="TreeNodeButton_GotFocus" />
            </TextBlock>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate x:Key="level6"
                                  ItemsSource="{Binding Members}"
                                  ItemTemplate="{StaticResource level7}">

            <TextBlock  Style="{StaticResource nodeTextBlock}"  >
             <Button Style="{StaticResource btnTreeNode}" MouseDoubleClick="TreeNodeButton_MouseDoubleClick"  GotFocus="TreeNodeButton_GotFocus"/>
            </TextBlock>

        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate x:Key="level5"
                                  ItemsSource="{Binding Members}"
                                  ItemTemplate="{StaticResource level6}">
            <TextBlock  Style="{StaticResource nodeTextBlock}" >
             <Button Style="{StaticResource btnTreeNode}" MouseDoubleClick="TreeNodeButton_MouseDoubleClick"  GotFocus="TreeNodeButton_GotFocus" />
            </TextBlock>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate x:Key="level4"
                                  ItemsSource="{Binding Members}"
                                  ItemTemplate="{StaticResource level5}">
            <TextBlock  Style="{StaticResource nodeTextBlock}" >
             <Button Style="{StaticResource btnTreeNode}" MouseDoubleClick="TreeNodeButton_MouseDoubleClick"  GotFocus="TreeNodeButton_GotFocus" />
            </TextBlock>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate x:Key="level3"
                                  ItemsSource="{Binding Members}"
                                  ItemTemplate="{StaticResource level4}">
            <TextBlock  Style="{StaticResource nodeTextBlock}" >
             <Button Style="{StaticResource btnTreeNode}" MouseDoubleClick="TreeNodeButton_MouseDoubleClick"  GotFocus="TreeNodeButton_GotFocus"/>
            </TextBlock>

        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate x:Key="level2"
                                  ItemsSource="{Binding Members}"
                                  ItemTemplate="{StaticResource level3}">
            <TextBlock  Style="{StaticResource nodeTextBlock}" >
             <Button Style="{StaticResource btnTreeNode}" MouseDoubleClick="TreeNodeButton_MouseDoubleClick"  GotFocus="TreeNodeButton_GotFocus" />
            </TextBlock>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate x:Key="level1"
                                  ItemsSource="{Binding Members}"
                                  ItemTemplate="{StaticResource level2}">
            <TextBlock  Style="{StaticResource nodeTextBlock}" >
             <Button Style="{StaticResource btnTreeNode}" MouseDoubleClick="TreeNodeButton_MouseDoubleClick" GotFocus="TreeNodeButton_GotFocus" />
            </TextBlock>

        </HierarchicalDataTemplate>
    </UserControl.Resources>

    <Grid>
        <Border x:Name="bdrTV" BorderBrush ="Black" BorderThickness="0.5" Margin="5,5,5,5"   VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Vertical">
                <TreeView x:Name="tvProperties" Grid.Row="0" Grid.Column="0"  ItemsSource="{Binding TreeViewNodes}"
                                        Margin="0"
                                            HorizontalAlignment="Stretch"  
                                            VerticalAlignment="Stretch"
                                            ScrollViewer.VerticalScrollBarVisibility="Auto"  
                                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                            MaxHeight="{Binding ElementName=bdrTV, Path=ActualHeight}"                    
                                            Width="Auto"
                                            AllowDrop="True"  
                                            Visibility="Visible" 
                                            FontWeight="Normal" 
                                            FontFamily="Calibri" 
                                            ItemTemplate="{StaticResource level1}" 
                                    >



        </TreeView>
                </StackPanel>
        </Border>
    </Grid>
</UserControl>
