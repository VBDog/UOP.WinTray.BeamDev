                            </StackPanel>

                            <!--Drawing-->
                            <Grid x:Name="Drawing_AND_ButtonBar" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!--<StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Width="Auto">-->
                                <!-- SECOND ROW COLUMN 2-->


                                <Border
                                            Margin="10,5,0,0"
                                            Background="Gray"
                                            Loaded="cadfxTrayDxfViewer_Loaded" 
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            BorderBrush="Gray"
                                            BorderThickness="1"
                                            Width="580"
                                            Height="580">

                                    <Grid>
                                        <Viewbox 
                                        Width="100" 
                                        Height="100"
                                        Grid.Column="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                     Margin="5"
                                    >

                                            <cntrls:CircularProgressBar 
                                        Background="Transparent" 
                                          Visibility="{Binding Visibility_ViewerProgress, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"        
                                      />
                                        </Viewbox>

                                        <cadfx:DXFViewer 
                                            Name="CadFxViewer_InputSketch"   
                                            Background="Gray"
                                            Loaded="cadfxTrayDxfViewer_Loaded" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            BorderBrush="Black"
                                            BorderThickness="1"
                                            Width="580"
                                            Height="580"
                                        Visibility="{Binding Visibility_Viewer,Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                            DXFImageSource="{Binding Image, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    />
                                    </Grid>
                                </Border>

                                <WindowsFormsHost Grid.Row="0"  Name="winFormsHost" Background="Gray" Margin="0,0,0,0" VerticalAlignment="Top" Visibility="Hidden" />


                                <!-- BUTTON BAR -->

                                <StackPanel Orientation="Vertical" Grid.Row ="1" Grid.Column ="1" HorizontalAlignment="Center" Margin="10,0,10,0">
                                    <Button Content="Warnings"  
                                    Command="{Binding Command_ShowWarnings}" Style="{StaticResource MetroButton}" Width="80" 
                                    ToolTip="View Project Warnings" Foreground="{Binding WarningButtonColor, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource textToColorConverter}}"
                                
                                    />
                                    <Button Content="Reports" Style="{StaticResource MetroButton}" Width="80" 
                                    Command="{Binding Command_Reports}"
                                    ToolTip="View and Execute Available Reports For The Project"
                                    />
                                    <Button Content="Constraints"  Style="{StaticResource MetroButton}" 
                                    Command="{Binding Command_EditConstraints}" Width="80" Visibility="{Binding VisibilityMDSpout}"
                                    ToolTip="Edit Spout Group Properties Tray Wide"
                                    />
                                    <Button Content="Distribution" Style="{StaticResource MetroButton}" 
                                    Command="{Binding Command_EditSpoutArea}"  Width="80"  Visibility="{Binding VisibilityMDSpout}" 
                                    ToolTip="Edit Tray Wide Spout Area Distribution"
                                    />
                                    <Button Content="Splicing" Style="{StaticResource MetroButton}" 
                                    Command="{Binding Command_Edit_Splicing}" Width="80" Visibility="{Binding VisibilityMDDraw}" 
                                    ToolTip="Edit Tray Deck Splice Locations"
                                    />
                                    <Button Content="Stiffeners" Style="{StaticResource MetroButton}" 
                                    Command="{Binding Command_EditStiffeners}" Width="80" Visibility="{Binding VisibilityMDDraw}" 
                                     ToolTip="Edit Tray Downcomer Stiffener Locations"
                                    />
                                    <Button Content="Slotting" Style="{StaticResource MetroButton}"
                                    Command="{Binding Command_EditSlotting}" Width="80" Visibility="{Binding VisibilityECMDDraw}" 
                                     ToolTip="Edit Tray ECMD Slot Configuration"
                                    />

