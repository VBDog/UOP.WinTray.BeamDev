                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--<StackPanel x:Name="PropertyLists" Orientation="Horizontal"  Grid.Row="1"   
                                 HorizontalAlignment="Left"  VerticalAlignment="Top"
                                Height="220"
                                >-->

                            <views:UOPPropertyListView x:Name="Props_Range" PartType="TrayRange" Grid.Column="0" 
