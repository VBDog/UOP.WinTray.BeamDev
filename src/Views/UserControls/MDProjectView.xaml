                                        <Button Content="Edit" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_CaseOwner_Edit}" ToolTip="Edit Current Distributor Properties" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddDistrib, Path=Margin}" Width="{Binding ElementName=cmdAddDistrib, Path=Width}" Height="{Binding ElementName=cmdAddDistrib, Path=Height}"/>
                                        <Button Content="Delete" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_CaseOwner_Delete}" ToolTip="Delete The Current Distributor" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddDistrib, Path=Margin}" Width="{Binding ElementName=cmdAddDistrib, Path=Width}" Height="{Binding ElementName=cmdAddDistrib, Path=Height}"/>
                                        <Button Content="Copy" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_CaseOwner_Copy}" ToolTip ="Copy Project Distributor" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddDistrib, Path=Margin}" Width="{Binding ElementName=cmdAddDistrib, Path=Width}" Height="{Binding ElementName=cmdAddDistrib, Path=Height}"/>
                                        <Button Content="Sort" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_CaseOwner_Sort}" ToolTip ="Sort Project Distributors" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddDistrib, Path=Margin}" Width="{Binding ElementName=cmdAddDistrib, Path=Width}" Height="{Binding ElementName=cmdAddDistrib, Path=Height}"/>
                                        <Button Content="Rename" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_CaseOwner_Rename}" ToolTip ="Rename Project Distributor" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddDistrib, Path=Margin}" Width="{Binding ElementName=cmdAddDistrib, Path=Width}" Height="{Binding ElementName=cmdAddDistrib, Path=Height}"/>
                                    </StackPanel>

                                </Border>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="25*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                            </Grid.RowDefinitions>
                            <StackPanel x:Name="stackDCaseSelector" Orientation="Horizontal" Grid.Row="0" Visibility="{Binding Visibility_CurrentDistributor}">
                                <TextBlock x:Name="SelectDCaseLabel" Text="Select Active Case: " Style="{StaticResource GlobalUnitsCaption}"  />
                                <ComboBox Name="cboDCases" ItemsSource="{Binding CaseListD}" SelectedIndex="{Binding Selected_DistributorCaseIndex}" MinWidth="200"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Row="1"  Visibility="{Binding ElementName=stackDCaseSelector, Path=Visibility}">
                                <views:MDCaseView  x:Name="CaseDetailsD" DataContext="{Binding Selected_DistributorCase, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="5" MinHeight="{Binding ElementName=DCaseControlsBorder, Path =ActualHeight}"  />
                                <Border x:Name="DCaseControlsBorder" BorderBrush="Black" BorderThickness="0.5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,5,0,5" Visibility="{Binding VisibilityMDSpout}">
                                    <StackPanel Orientation="Vertical" >
                                        <Button Content="Add" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_Case_Add}" ToolTip="Add Project Distributor Load Case" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddDistrib, Path=Margin}" Width="{Binding ElementName=cmdAddDistrib, Path=Width}" Height="{Binding ElementName=cmdAddDistrib, Path=Height}"/>
                                        <Button Content="Edit" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_Case_Edit}" ToolTip="Edit Current Distributor Load Case Properties" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddDistrib, Path=Margin}" Width="{Binding ElementName=cmdAddDistrib, Path=Width}" Height="{Binding ElementName=cmdAddDistrib, Path=Height}"/>
                                        <Button Content="Delete" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_Case_Delete}" ToolTip="Delete The Current Load Case Distributor" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddDistrib, Path=Margin}" Width="{Binding ElementName=cmdAddDistrib, Path=Width}" Height="{Binding ElementName=cmdAddDistrib, Path=Height}"/>
                                        <Button Content="Copy" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_Case_Copy}" ToolTip ="Copy Project Distributor" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddDistrib, Path=Margin}" Width="{Binding ElementName=cmdAddDistrib, Path=Width}" Height="{Binding ElementName=cmdAddDistrib, Path=Height}"/>
                                        <Button Content="Sort" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_Case_Sort}" ToolTip ="Sort Project Distributor Load Cases" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddDistrib, Path=Margin}" Width="{Binding ElementName=cmdAddDistrib, Path=Width}" Height="{Binding ElementName=cmdAddDistrib, Path=Height}"/>
                                        <Button Content="Rename" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_Case_Rename}" ToolTip ="Rename Project Distributor Case" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddDistrib, Path=Margin}" Width="{Binding ElementName=cmdAddDistrib, Path=Width}" Height="{Binding ElementName=cmdAddDistrib, Path=Height}"/>
                                    </StackPanel>

                                </Border>
                            </StackPanel>
                        </Grid>
                    </Grid>

                </Border>
            </TabItem>

            <!-- CHIMNEY TRAYS TAB -->
            <TabItem Header="Chimney Trays" Style="{StaticResource tabItemStyle}"   >
                <Border x:Name="Border_ChimneyTrays_Tab" BorderBrush="{Binding ElementName=BorderControl, Path=BorderBrush}"  
                    BorderThickness="{Binding ElementName=BorderControl, Path=BorderThickness}"
                    MinWidth="{Binding ElementName=BorderControl, Path=ActualWidth}"
                    Margin="{Binding ElementName=BorderControl, Path=Margin}"
                    >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="75*"/>
                            <ColumnDefinition Width="75*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Expander  Header="Property Explorer"  Grid.Column="0" Grid.Row="0"
                              VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Center" 
                                             
                                Foreground="Black"
                                ExpandDirection="Right" 
                             
                                IsExpanded="False"  
                                SnapsToDevicePixels="True" Background="{x:Null}" 
                                Visibility="Visible"
                                Style="{StaticResource ExplorerExpander}" Width="Auto" Margin="10,0,0,0"
                            >
                            <Expander.Content>
                                <Grid Width="Auto" Height="Auto" Grid.Column="0" Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Border x:Name="bdrProjectTree_CTs" Grid.Row="0" BorderBrush ="Black" BorderThickness="0.5" Margin="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  >

                                        <views:UOPPropertyTreeView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DataContext="{Binding Tree_ChimneyTrays}"  MaxHeight="{Binding ElementName=bdrProjectTree_CTs, Path=ActualHeight}"/>
                                    </Border>
                                    <GridSplitter 
                                                    Grid.Column="1" 
                                                    Grid.RowSpan="2" 
                                                    Background="#FFCBCBCB" 
                                                    ResizeBehavior="PreviousAndCurrent" 
                                                    ResizeDirection="Columns"
                                                    Width="6" 
                                                    Margin="0,0,0,0">
                                    </GridSplitter>
                                </Grid>
                            </Expander.Content>
                        </Expander>
                        <!--<views:UOPPropertyTreeView Width="350" Grid.Column="0" HorizontalAlignment="Left" DataContext="{Binding Tree_ChimneyTrays}"  MaxHeight="{Binding ElementName=BorderControl, Path=ActualHeight}"  />-->
                        <Grid Grid.Column="1">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Row="0" Visibility="{Binding Visibility_CurrentCT}" Margin="0,5,0,5">
                                <TextBlock x:Name="SelectCLabel" Text="Select Active Chimney Tray: " Style="{StaticResource GlobalUnitsCaption}"  />
                                <ComboBox Name="cboCTs" ItemsSource="{Binding OwnerListC}" SelectedIndex="{Binding Selected_ChimneyTrayIndex}" MinWidth="200"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Row="1">
                                <views:MDCaseOwnerView x:Name="OwnerC" DataContext="{Binding Selected_ChimneyTray, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5"  MinWidth="{Binding ElementName=CaseDetailsC, Path =ActualWidth}" MinHeight="{Binding ElementName=DControlsBorder, Path =ActualHeight}" Visibility="{Binding Visibility}"/>
                                <Border x:Name="CTControlsBorder" BorderBrush="Black" BorderThickness="0.5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,5,0,5" Visibility="{Binding VisibilityMDSpout}">
                                    <StackPanel Orientation="Vertical" >
                                        <Button x:Name="cmdAddCT" Content="Add" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_CaseOwner_Add}" ToolTip="Add Project Chimney Tray" HorizontalAlignment="Left" Margin="5,2,5,2" VerticalAlignment="Center" Width="35" Height="20"/>
                                        <Button Content="Edit" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_CaseOwner_Edit}" ToolTip="Edit Current Chimney Tray Properties" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddCT, Path=Margin}" Width="{Binding ElementName=cmdAddCT, Path=Width}" Height="{Binding ElementName=cmdAddCT, Path=Height}"/>
                                        <Button Content="Delete" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_CaseOwner_Delete}" ToolTip="Delete The Current Chimney Tray" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddCT, Path=Margin}" Width="{Binding ElementName=cmdAddCT, Path=Width}" Height="{Binding ElementName=cmdAddCT, Path=Height}"/>
                                        <Button Content="Copy" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_CaseOwner_Copy}" ToolTip ="Copy Project Chimney Tray" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddCT, Path=Margin}" Width="{Binding ElementName=cmdAddCT, Path=Width}" Height="{Binding ElementName=cmdAddCT, Path=Height}"/>
                                        <Button Content="Sort" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_CaseOwner_Sort}" ToolTip ="Copy Project Chimney Tray" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddCT, Path=Margin}" Width="{Binding ElementName=cmdAddCT, Path=Width}" Height="{Binding ElementName=cmdAddCT, Path=Height}"/>
                                        <Button Content="Rename" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_CaseOwner_Rename}" ToolTip ="Rename Project Chimney Tray" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddDistrib, Path=Margin}" Width="{Binding ElementName=cmdAddDistrib, Path=Width}" Height="{Binding ElementName=cmdAddDistrib, Path=Height}"/>
                                    </StackPanel>

                                </Border>

                            </StackPanel>
                        </Grid>
                        <Grid Grid.Column="2">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                            </Grid.RowDefinitions>

                            <StackPanel x:Name="stackCCaseSelector" Orientation="Horizontal" Grid.Row="0"  Grid.Column="0" Visibility="{Binding Visibility_CurrentCT}">
                                <TextBlock x:Name="SelectCCaseLabel" Text="Select Active Case: " Style="{StaticResource GlobalUnitsCaption}"  />
                                <ComboBox Name="cboCCases" ItemsSource="{Binding CaseListC}" SelectedIndex="{Binding Selected_ChimneyTrayCaseIndex}" MinWidth="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Row="3" Visibility="{Binding Visibility_CurrentCT}" >
                                <views:MDCaseView  x:Name="CaseDetailsC" DataContext="{Binding Selected_ChimneyTrayCase, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="5"  MinHeight="{Binding ElementName=CTCaseControlsBorder, Path =ActualHeight}" />
                                <Border x:Name="CTCaseControlsBorder" BorderBrush="Black" BorderThickness="0.5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,5,0,5" Visibility="{Binding VisibilityMDSpout}">
                                    <StackPanel Orientation="Vertical" >
                                        <Button Content="Add" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_Case_Add}" ToolTip="Add Project Chimney Tray Case" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddCT, Path=Margin}" Width="{Binding ElementName=cmdAddCT, Path=Width}" Height="{Binding ElementName=cmdAddCT, Path=Height}"/>
                                        <Button Content="Edit" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_Case_Edit}" ToolTip="Edit Current Chimney Tray Properties Case" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddCT, Path=Margin}" Width="{Binding ElementName=cmdAddCT, Path=Width}" Height="{Binding ElementName=cmdAddCT, Path=Height}"/>
                                        <Button Content="Delete" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_Case_Delete}" ToolTip="Delete The Current Chimney Tray Case" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddCT, Path=Margin}" Width="{Binding ElementName=cmdAddCT, Path=Width}" Height="{Binding ElementName=cmdAddCT, Path=Height}"/>
                                        <Button Content="Copy" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_Case_Copy}" ToolTip ="Copy Project Chimney Tray Case" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddCT, Path=Margin}" Width="{Binding ElementName=cmdAddCT, Path=Width}" Height="{Binding ElementName=cmdAddCT, Path=Height}"/>
                                        <Button Content="Sort" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_Case_Sort}" ToolTip ="Copy Project Chimney Tray Case" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddCT, Path=Margin}" Width="{Binding ElementName=cmdAddCT, Path=Width}" Height="{Binding ElementName=cmdAddCT, Path=Height}"/>
                                        <Button Content="Rename" Style="{StaticResource GlobalButtonStyle}" Command="{Binding Command_Case_Rename}" ToolTip ="Rename Project Chimney Tray Case" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{Binding ElementName=cmdAddDistrib, Path=Margin}" Width="{Binding ElementName=cmdAddDistrib, Path=Width}" Height="{Binding ElementName=cmdAddDistrib, Path=Height}"/>
                                    </StackPanel>

                                </Border>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>


            <!-- DRAWINGS TAB -->
            <TabItem Header="Drawings" Style="{StaticResource tabItemStyle}" 
               >
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <ToolBarTray>
                        <ToolBar Visibility="{Binding VisibilityMDDraw}" >
                            <Button Command="{Binding Command_OpenBatchProcessingWindow}" Content="Batch Drawing Generator"/>
                        </ToolBar>
                        <ToolBar Visibility="{Binding Visibility_DrawingScaleControl}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock VerticalAlignment="Center" Margin="5,0,5,0">Border Scale:</TextBlock>
                                <ComboBox IsEditable="True" IsReadOnly="True" ItemsSource="{Binding DrawingScales}" SelectedItem="{Binding DrawingScale_Current}" IsEnabled="{Binding DrawingScale_Enabled}" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="5,0,5,0" MinWidth="50">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding Command_DrawingScale_Change}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ComboBox>
                                <Button Padding="5,0" Margin="5,0,5,0" Command="{Binding Command_DrawingScale_Custom}" IsEnabled="{Binding DrawingScale_Enabled}" VerticalContentAlignment="Center" VerticalAlignment="Center" MinWidth="50">Input</Button>
                            </StackPanel>
                        </ToolBar>
                    </ToolBarTray>
                    <Border BorderBrush="{Binding ElementName=BorderControl, Path=BorderBrush}"  
                    BorderThickness="{Binding ElementName=BorderControl, Path=BorderThickness}"
                    MinWidth="{Binding ElementName=BorderControl, Path=ActualWidth}"
                    MinHeight="{Binding ElementName=BorderControl, Path=ActualHeight}"
                    Margin="{Binding ElementName=BorderControl, Path=Margin}"
                    >
                        <TabControl x:Name="drawingsTabControl" 
                            SelectionChanged="drawingsTabControl_SelectionChanged" 
                            Style="{StaticResource tabControlStyle}" 
                            ItemsSource="{Binding UOPDocumentTabs}" 
                            SelectedIndex="{Binding DrawingTab_SelectedIndex}"
                           
                            >
                            <TabControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="{Binding Header}" ToolTip="{Binding ToolTip}" ContextMenu="{Binding DocMenu }" />
                                        <Button Content="x" Height="17" Width="17"  BorderThickness="0" BorderBrush="Transparent" Command="{Binding Command_Close}"/>
                                    </StackPanel>

                                </DataTemplate>
                            </TabControl.ItemTemplate>
                            <TabControl.ContentTemplate>
                                <DataTemplate>


                                    <cadfx:DXFViewer
                                   Name="cadfxViewer"
                                Background="Gray"
                                DataContext="{Binding ViewModel}" 
                                Loaded="cadfxViewer_Loaded" 
                                ContextMenu="{StaticResource dxfViewerContextMenu}"
                                />

                                </DataTemplate>
                            </TabControl.ContentTemplate>
                        </TabControl>
                    </Border>
                </StackPanel>
            </TabItem>
        </TabControl>
        <!--</ContentControl>-->
        <!--</GroupBox>-->
    </Grid>
</UserControl>
