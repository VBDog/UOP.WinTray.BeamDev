                                ListCaption="Downcomer Properties" ListFooter=""
                                ToolTip="Double Click To Edit Property Values"
                                MouseDoubleClick="PropertyList_MouseDoubleClick"
                                VerticalAlignment="Top" HorizontalAlignment="Left"
                                
                                Margin="0,0,10,0"
                                />

                            <views:UOPPropertyListView x:Name="Props_Deck" PartType="Deck" Grid.Column="2" 
                                        Style="{StaticResource lstProperties}"
                                        ListCaption="Deck Properties" ListFooter=""
                                        ToolTip="Double Click To Edit Property Values"
                                        MouseDoubleClick="PropertyList_MouseDoubleClick"
                                />

                            <views:UOPPropertyListView x:Name="Props_DesignOptions" PartType="DesignOptions" Grid.Column="3"
                                        Style="{StaticResource lstProperties}"
                                        ListCaption="Design Info"  ListFooter=""
                                        ToolTip="Double Click To Edit Property Values"
                                        MouseDoubleClick="PropertyList_MouseDoubleClick" 
                                />
                            <!--<StackPanel Orientation="Vertical" Grid.Column="4" 
                                            VerticalAlignment="Top" HorizontalAlignment="Left"
                                            Margin="10,0,10,10">-->
                            <!--<Grid x:Name="PropertyList_GridStack"  Grid.Column="4"   
                                 
                                >

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="125"/>
                                    <RowDefinition Height="*"/>

                                </Grid.RowDefinitions>-->




                            <views:UOPPropertyListView x:Name="Props_Startups" PartType="StartupSpouts" Grid.Column ="4"
                                    Style="{StaticResource lstProperties}"
                                    ListCaption="Startup Spouts"  ListFooter=""
                                    MinWidth="{Binding ElementName=Props_Materials, Path=ActualWidth}"
                                    ToolTip="Double Click To Edit Property Values"
                                    MouseDoubleClick="PropertyList_MouseDoubleClick"
                                    />
                            <StackPanel Grid.Column="5" Orientation="Vertical" >
                                <views:UOPPropertyListView x:Name="Props_Materials" PartType="Materials" Grid.Column="5"
                                    VerticalAlignment="Top" HorizontalAlignment="Left"
                                    Style="{StaticResource lstProperties}"
                                    ListCaption="Materials"  ListFooter=""
                                    ToolTip="Double Click To Edit Property Values"
                                    MouseDoubleClick="PropertyList_MouseDoubleClick" 
                                    
                                    />

                                <views:UOPPropertyListView x:Name="Props_Beam" PartType="TraySupportBeam" 
Style="{StaticResource lstProperties}"
ListCaption="Beam Properties"  ListFooter=""
ToolTip="Double Click To Edit Property Values"
MouseDoubleClick="PropertyList_MouseDoubleClick"
Visibility="{Binding DataContext.IsBeamPropertiesVisible, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
  />
                            </StackPanel>
                            <!--</Grid>-->
                            <!--</StackPanel>-->
                        </Grid>
                        <!--</Border>-->
                        <!-- END THIRD ROW -->

                    </Grid>
                </Border>

            </TabItem>

            <!-- DISTRIBUTORS TAB -->
            <TabItem Header="Distributors" Style="{StaticResource tabItemStyle}" Margin="-2,-2,-2,2"    >
                <Border x:Name="Border_Distributor_Tab" BorderBrush="{Binding ElementName=BorderControl, Path=BorderBrush}"  
                    BorderThickness="{Binding ElementName=BorderControl, Path=BorderThickness}"
                    MinWidth="{Binding ElementName=BorderControl, Path=ActualWidth}"
                    Margin="{Binding ElementName=BorderControl, Path=Margin}"
                    >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="75*"/>
                            <ColumnDefinition Width="75*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Expander  Header="Property Explorer"  Grid.Column="0" Grid.Row="0"
                              VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Center" 
                                             
                                Foreground="Black"
                                ExpandDirection="Right" 
                             
                                IsExpanded="False"  
                                SnapsToDevicePixels="True" Background="{x:Null}" 
                                Visibility="Visible"
                                Style="{StaticResource ExplorerExpander}" Width="Auto" Margin="10,0,0,0"
                            >
                            <Expander.Content>
                                <Grid Width="Auto" Height="Auto" Grid.Column="0" Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>

                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border x:Name="bdrProjectTree_Distributors" Grid.Row="0" BorderBrush ="Black" BorderThickness="0.5" Margin="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  >

                                        <views:UOPPropertyTreeView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DataContext="{Binding Tree_Distributors}"  />
                                    </Border>
                                    <GridSplitter 
                                                    Grid.Column="1" 
                                                    Grid.RowSpan="2" 
                                                    Background="#FFCBCBCB" 
