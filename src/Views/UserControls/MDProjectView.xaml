<UserControl x:Class="UOP.WinTray.UI.Views.MDProjectView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:UOP.WinTray.UI.Views"  
        xmlns:cadfx="clr-namespace:UOP.DXFGraphicsControl;assembly=UOP.DXFGraphicsControl"
        xmlns:viewModellocator ="clr-namespace:UOP.WinTray.UI"
        xmlns:cntrls="clr-namespace:UOP.WinTray.UI.CustomControls.UserControls"
        xmlns:conv="clr-namespace:UOP.WinTray.UI.Converters"
        xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
        viewModellocator:ViewModelLocator.IsAutomaticLocator="True"
        md:DialogServiceViews.IsRegistered="True" 
               xmlns:viewmodels="clr-namespace:UOP.WinTray.UI.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MDProjectViewModel}"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded"
        Visibility="{Binding VisibilityMDProject, UpdateSourceTrigger=PropertyChanged}"
             IsEnabled="{Binding IsEnabled}"
        mc:Ignorable="d"
             GotFocus="UserControl_GotFocus"
             
        >

    <UserControl.Resources>
        <conv:TextToColorConverter x:Key="textToColorConverter"/>

        <ContextMenu x:Key="dxfViewerContextMenu">

            <MenuItem Header="Zoom Extent" Command="{Binding ZoomExtentCommand}"/>
            <MenuItem Header="Zoom In" Command="{Binding ZoomInCommand}"/>
            <MenuItem Header="Zoom Out" Command="{Binding ZoomOutCommand}"/>
            <MenuItem Header="Zoom Window" Command="{Binding ZoomWindowCommand}"/>
            <MenuItem Header="Zoom Previous" Command="{Binding ZoomPreviousCommand}"/>
            <Separator/>
            <MenuItem Header="Regenerate" Command="{Binding RegenerateCommand}"/>
            <!--<Separator/>
            <MenuItem Header="Save" Command="{Binding SaveCommand}"/>
            <MenuItem Header="Save and Open" Command="{Binding SaveAndOpenCommand}"/>
            <Separator/>
            <MenuItem Header="Close" Command="{Binding CloseCommand}"/>
            <MenuItem Header="Close All" Command="{Binding CloseAllCommand}"/>-->
        </ContextMenu>
        <Style x:Key="LabelStyle" TargetType="Label" BasedOn="{StaticResource LabelStyle}">
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="Button"  x:Key="WrapButton">
            <Setter Property="Width" Value="auto"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,19,0,0"/>
            <Setter Property="Height" Value="20"/>
        </Style>
        <Style x:Key="MetroButton" TargetType="{x:Type Button}" BasedOn="{StaticResource WrapButton}">
            <Setter Property="Margin" Value="10,19,0,0"/>
            <Setter Property="Padding" Value="10 0 10 0" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="ButtonBorder" CornerRadius="2" BorderThickness="1">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <LinearGradientBrush.GradientStops>
                                        <GradientStop Color="#C9C7BA" />
                                        <GradientStop Color="#D3D3D3" />
                                    </LinearGradientBrush.GradientStops>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Grid Name="ButtonGrid" Background="Transparent">
                                <Border Name="HoverRectangle" CornerRadius="2" BorderThickness="0">
                                    <ContentPresenter Name="Content" VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="ButtonBase.IsEnabled" Value="False">
                                <Setter Property="Background" TargetName="ButtonBorder" Value="#F5F4EA" />
                                <Setter Property="BorderBrush" TargetName="HoverRectangle" Value="#C9C7BA" />
                                <Setter Property="BorderThickness" TargetName="HoverRectangle" Value="1.2" />
                            </Trigger>
                            <Trigger Property="ButtonBase.IsEnabled" Value="True">
                                <Setter Property="BorderBrush" TargetName="HoverRectangle" Value="#003C74" />
                                <Setter Property="BorderThickness" TargetName="HoverRectangle" Value="1" />
                            </Trigger>
                            <Trigger Property="ButtonBase.IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" TargetName="HoverRectangle" Value="#FDBD57" />
                                <Setter Property="BorderThickness" TargetName="HoverRectangle" Value="2,1,2,2" />
                                <Setter Property="BorderBrush" TargetName="ButtonBorder" Value="#003C74" />
                                <Setter Property="Background" TargetName="ButtonBorder"
                                    Value="{StaticResource NormalBrush}" />

                                <Setter Property="BorderThickness" TargetName="ButtonBorder" Value="1" />
                                <Setter Property="Margin" TargetName="ButtonBorder" Value="1" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="ButtonBorder" Value="#E3E3DB" />
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderThickness" TargetName="HoverRectangle" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource ComboBoxStyle}">
            <Setter Property="Width" Value="150"/>
        </Style>
        <Style TargetType="DataGrid">
            <Style.Setters>
                <Setter Property="MinColumnWidth" Value="60"/>
                <Setter Property="Height" Value="150"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            </Style.Setters>
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="Width" Value="50"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="TabControl" x:Key="tabControlStyle">
            <Setter Property="Margin" Value="0"/>
        </Style>
        <Style TargetType="TabItem" x:Key="tabItemStyle">
            <Setter Property="Padding" Value="25,5,25,5"/>
        </Style>
        <Style TargetType="Label" x:Key="txt_label">
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <Style TargetType="Label" x:Key="txt_labe">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Label" x:Key="txt_value">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="views:UOPPropertyListView" x:Key="lstProperties">

            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="5,0,5,0" />
            <Setter Property="MinWidth" Value="175" />
            <Setter Property="MaxHeight" Value="260" />

        </Style>

        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    </UserControl.Resources>

    <!--<GroupBox Style="{StaticResource GlobalGroupBoxStyle}" BorderThickness="1.5" HorizontalAlignment="Stretch">-->

    <!--<ContentControl
            DockPanel.Dock="Top"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Content="{Binding CurrentPageItemViewModel}"/>-->
