                                        <!--<userControls:MDSpoutProjectHeaderView />-->
                                        <!--<ComboBox Style="{StaticResource ComboBoxStyle}" 
                                            DisplayMemberPath="Name" 
                                            ItemsSource="{Binding Path=RangeData}"
                                            SelectedIndex="{Binding Path=SelectedRangeIndex, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  
                                            SelectedItem="{Binding Path=SelectedWTRange, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                            />-->

