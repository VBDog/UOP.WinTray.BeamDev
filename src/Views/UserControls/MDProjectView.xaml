                                     />
                                        <!--SelectedValue="{Binding SelectedRangeGUID , Mode=TwoWay}"
       SelectedValuePath="GUID"-->
                                        <!--Converter={StaticResource trayCollectionConverter}-->
                                        <!--SelectedValue="{Binding SelectedRangeGUID, Mode=TwoWay}"-->
                                        <!--SelectedItem="{Binding SelectedRangeListItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"-->
                                        <!--SelectedValuePath="Item2" 
                                    DisplayMemberPath="Item1"-->

                                        <Button Content="Excel" x:Uid="btnExcel" Name="btnExcel" Visibility="Collapsed" Click="btnExcel_Click"/>
                                    </StackPanel>
                                    <!-- UNITS SELECTOR -->
                                    <StackPanel Orientation="Vertical" Margin="50,0,0,0">
                                        <Label Content="Units" Style="{StaticResource txt_label}"/>
                                        <ToggleButton 
                                            IsChecked="{Binding IsEnglishSelected,Mode=TwoWay }"
                                            CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}"
                                            Style="{StaticResource UnitsToggleButtonStyle_Large}" 
                                            HorizontalAlignment="Left" Checked="ToggleButton_Checked" 
                                            />
                                    </StackPanel>


                                </StackPanel>

                                <!-- SPOUT GRID -->
                                <StackPanel Name="dataStackPanel1"  Orientation="Vertical">
                                    <Label Content="Spout Properties" Style="{StaticResource txt_label}"/>
                                    <views:MDSpoutGroupsDataGridView  x:Name="Grid_Spouts" 
                                                                      HorizontalAlignment="Left" 
                                                                      Loaded="Grid_Spouts_Loaded" />
                                </StackPanel>
                                <StackPanel Name="Stack_DCS_PANELS" Orientation="Horizontal" VerticalAlignment="Stretch">

                                    <StackPanel Name="dataStackPanel2" Orientation="Vertical">
                                        <Label Content="Downcomers" Style="{StaticResource txt_label}"/>
                                        <views:MDDowncomersDataGridView x:Name="Grid_Downcomers" HorizontalAlignment="Stretch" Loaded="Grid_Downcomers_Loaded"/>
                                    </StackPanel>
