<UserControl x:Class="UOP.WinTray.UI.Views.UserControls.SelectDowncomerMaterialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UOP.WinTray.UI.Views.UserControls"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}" x:Key="WrapButton"  BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="1 0 1 0"></Setter>

            <Setter Property="MinHeight" Value="20"></Setter>

            <Setter Property="MinWidth" Value="70"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="Background" Value="AliceBlue"></Setter>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock TextAlignment="Center" Text="{TemplateBinding Content}" TextWrapping="Wrap" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--TextBlock Style-->
        <Style x:Key="Local_TextBlockStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="70"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource ComboBoxStyle}">
            <Setter Property="Height" Value="25"/>
        </Style>
       
    </UserControl.Resources>
    <GroupBox Style="{StaticResource GlobalGroupBoxStyle}" BorderThickness="2" Margin="2">
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!--Row 1-->
            <Label Style="{StaticResource LabelStyle}" Content="Select Material Family:" Grid.Row="0" Grid.Column="0"/>
            <ComboBox  Style="{StaticResource ComboBoxStyle}" DisplayMemberPath="Name" ItemsSource="{Binding MaterialFamilies,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValue="{Binding SelectedMaterialFamily, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="0" Grid.Column="1"/>

            <!--Row 2nd-->

            <Label Style="{StaticResource LabelStyle}" Content="Select Material Gage: " Grid.Row="1" Grid.Column="0"/>
            <ComboBox Style="{StaticResource ComboBoxStyle}"
                                  DisplayMemberPath="Gage"
                                  ItemsSource="{Binding MaterialGages,UpdateSourceTrigger=PropertyChanged}"
                                  SelectedItem="{Binding SelectedMaterialGage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="1" Grid.Column="1"/>
            <!--Row 3rd-->
            <Label Style="{StaticResource LabelStyle}" Content="Thickness (in):" Grid.Row="2" Grid.Column="0"/>
            <TextBlock Text="{Binding MaterialThickness}" Style="{StaticResource Local_TextBlockStyle}" Grid.Row="2" Grid.Column="1"/>

            <!--Row 4th-->
            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0">
                <Button Style="{StaticResource WrapButton}" Command="{Binding CancelCommand}" Height="20" Content="Cancel" IsCancel="True"/>
                <Button Style="{StaticResource WrapButton}" Command="{Binding AddCommand}" Height="20" Content="Add" Margin="5,0,0,0"/>
            </StackPanel>
            <Button Style="{StaticResource WrapButton}" Command="{Binding OkCommand}" Height="20" Content="OK" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" IsDefault="True"/>
        </Grid>
    </GroupBox>
</UserControl>