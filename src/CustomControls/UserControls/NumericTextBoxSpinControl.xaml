<UserControl x:Class="UOP.WinTray.UI.CustomControls.UserControls.NumericTextBoxSpinControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UOP.WinTray.UI.CustomControls.UserControls"
             mc:Ignorable="d" 
             Height="25" Width="80">
    <UserControl.Resources>
        <Style TargetType="TextBox" x:Key="NumericSpinStyle">
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="#FFD500"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsFocus}" Value="True">
                    <Setter Property="Background" Value="#FFD500"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border BorderBrush="Black" BorderThickness="0.5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            
            <TextBox Name="TextBoxValue"                    
                         IsEnabled="{Binding IsTextEnabled}"
					     PreviewTextInput="value_PreviewTextInput" LostFocus="TextBoxValue_LostFocus" GotFocus="Got_Focus" PreviewKeyDown="value_PreviewKeyDown"					 
                         TextAlignment="Right"
                         Text="{Binding Value, Mode=TwoWay}"
					     Grid.Column="0" Style="{StaticResource NumericSpinStyle}"/>
            <StackPanel Orientation="Vertical"
						    Grid.Column="1"						
						    VerticalAlignment="Center">
                <Button x:Name="Increase"
					    Click="Increase_Click">
                    <Image Source="Images/up.png" Height="6" Width="5"  />
                </Button>
                <Button x:Name="Decrease"
					    Click="Decrease_Click"					>
                    <Image Source="Images/down.png" Height="6" Width="5" />
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
